{
  "layer": "top",
  "position": "top",
  "height": 36,
  "modules-left": ["wlr/workspaces", "hyprland/window"],
  "modules-center": [],
  "modules-right": [
    "memory",
    "cpu",
    "temperature",
    "bluetooth",
    "backlight",
    "pulseaudio",
    "battery",
    "tray",
    "clock"
  ],
  "spacing": 5,
  "mode": "dock",

  "wlr/workspaces": {
    "format": "{icon}",
    "on-click": "activate",
    "format-icons": {
      "1": "",
      "2": "",
      "8": "",
      "9": "",
      "urgent": "",
      "active": "",
      "default": ""
    }
  },
  "tray": {
    "icon-size": 18,
    "spacing": 10
  },
  "clock": {
    "timezone": "Europe/Rome",
    "tooltip": true,
    "format": "{:%a %b %d, %H:%M}"
  },
  "cpu": {
    "format": "{icon0} {icon1} {icon2} {icon3} {icon4} {icon5} {icon6} {icon7}",
    "format-icons": ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█"]
  },
  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-bluetooth": "{volume}% {icon}",
    "format-muted": "---- ",
    "format-icons": {
      "headphone": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["", ""]
    },
    "scroll-step": 5,
    "on-click-right": "pavucontrol",
    "on-click": "amixer set Master toggle",
    "ignored-sinks": ["Easy Effects Sink"]
  },
  "battery": {
    "bat": "BAT0",
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format-alt": "{capacity}% {icon}",
    "format-charging": "{capacity}% ",
    "format-plugged": "{capacity}% ",
    "format": "{time} {icon}",
    "format-icons": ["", "", "", "", ""]
  },
  "backlight": {
    "format": "{percent}% {icon}",
    "scroll-step": 5,
    "format-icons": ["", "", "", "", "", "", "", "", ""]
  },
  "hyprland/window": {
    "format": "👉 {}",
    "separate-outputs": true,
    "max-length": 30
  },
  "bluetooth": {
    "format": " {status}",
    "format-connected": " {device_alias}",
    "format-disabled": " {status}",
    "on-click-right": "blueberry"
  },
  "temperature": {
    "critical-threshold": 80,
    "format": "{temperatureC}°C {icon}",
    "format-icons": [""],
    "thermal-zone": 1
  },
  "memory": {
    "interval": 30,
    "format": "{used:0.1f}G/{total:0.1f}G "
  }
}
